/**index.wxss**/
page{
  height:100%
}

.index-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: url("http://192.168.1.3:8086/greenplant-pic/index_bg.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.title {
  width: 100%;
  height: 145px;
  margin-top: 18%;
  padding-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-image: url("http://192.168.1.3:8086/greenplant-pic/title.png");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.little-english-title {
  color: green;
  font-size: 20px;
  font-weight: bold;
}

.little-chinese-title {
  color: #307939;
  font-size: 11px;
}

.slogan {
  margin-top: 2%;
  color: #009339;
  font-size: 30px;
}

.slogan-english {
  color: #009339;
  font-size: 14px;
}

.index-btn {
  margin-top: 2%;
  border-radius: 2em;
}

.content-english {
  margin-top: 2%;
  color: #1F783E;
}

.content-chinese {
  color: #1F783E;
}

.clearfix {
  zoom : 1;
}

.clearfix::before{
	content: '';
	display: table;
	clear: both;
}
