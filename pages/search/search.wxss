page {
  height: 100%;
}

.search-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-box {
  width: 100%;
  height: 60px;
  padding: 5px 0;
  margin-top: 30rpx;
  border-bottom: 1px whitesmoke solid;
}

.search-input {
  width: 80%;
  height: 40px;
  margin: 0 auto;
  padding-left: 20px;
  border-radius: 50px;
  background-color: whitesmoke;
}

.search-result {
  margin-top: 20rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.search-record {
  width: 95%;
  height: 65px;
  padding-left: 50px;
  margin : 15rpx 0;
}

.search-title {
  font-size: 15px;
  font-weight: bold;
  display: block;
}

.space {
  width: 100%;
  height: 10px;
}


.search-content {
  width: 100%;
  height: 26px;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}

.search-sign {
  display:inline-block;
  height: 20px;
  line-height: 20px;
  padding:2px;
  color: #C1C1C1;
  font-size: 12px;
  border: solid 1px #C1C1C1;
  border-radius: 3px;
  vertical-align: top;
}

.search-desc {
  display:inline-block;
  width: 50%;
  height: 26px;
  line-height: 26px;
  color: #C1C1C1;
  font-size: 12px;
  margin-left: 10px;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
  vertical-align: top;
}